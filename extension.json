{
	"name": "Wanda",
	"namemsg": "wanda-name",
	"version": "1.0.0",
	"author": [
		"Sanjay Thiyagarajan"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:Wanda",
	"descriptionmsg": "wanda-desc",
	"load_composer_autoloader": true,
	"license-name": "GPL-2.0-or-later",
	"type": "specialpage",
	"requires": {
		"MediaWiki": ">= 1.36.0"
	},
	"MessagesDirs": {
		"Wanda": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"WandaAlias": "Wanda_Aliases.php"
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\Wanda\\": "includes/",
		"MediaWiki\\Extension\\Wanda\\Specials\\": "includes/specials/",
		"MediaWiki\\Extension\\Wanda\\Maintenance\\": "maintenance/",
		"MediaWiki\\Extension\\Wanda\\Hooks\\": "includes/Hooks/"
	},
	"SpecialPages": {
		"Wanda": "MediaWiki\\Extension\\Wanda\\Specials\\SpecialAIChat"
	},
	"APIModules": {
		"chatbot": "MediaWiki\\Extension\\Wanda\\APIChat"
	},
	"ResourceModules": {
		"ext.wanda.main": {
			"scripts": [
				"libs/index.js"
			],
			"styles": [
				"libs/index.css"
			],
			"dependencies": [
				"mediawiki.util",
				"mediawiki.api",
				"oojs-ui-core",
				"oojs-ui-widgets"
			],
			"messages": [
				"wanda-chat-welcometext",
				"wanda-chat-welcomedesc",
				"wanda-chat-instruction1",
				"wanda-chat-instruction2",
				"wanda-chat-pdftotext-error",
				"wanda-llm-response-nocontext"
			],
			"targets": [
				"desktop",
				"mobile"
			]
		},
		"ext.wanda.floating": {
			"scripts": [
				"libs/floating-chat.js"
			],
			"styles": [
				"libs/floating-chat.css"
			],
			"dependencies": [
				"mediawiki.util",
				"mediawiki.api",
				"oojs-ui-core",
				"oojs-ui-widgets"
			],
			"messages": [
				"wanda-chat-welcometext",
				"wanda-chat-welcomedesc",
				"wanda-chat-instruction1",
				"wanda-chat-instruction2",
				"wanda-floating-chat-title",
				"wanda-llm-response-nocontext"
			],
			"targets": [
				"desktop",
				"mobile"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "Wanda"
	},
	"Hooks": {
		"PageSaveComplete": "MediaWiki\\Extension\\Wanda\\Hooks\\PageIndexUpdater::onPageSaveComplete",
		"UploadComplete": "MediaWiki\\Extension\\Wanda\\Hooks\\PageIndexUpdater::onUploadComplete",
		"BeforePageDisplay": "MediaWiki\\Extension\\Wanda\\Hooks\\FloatingChatHook::onBeforePageDisplay",
		"LoadExtensionSchemaUpdates": "MediaWiki\\Extension\\Wanda\\Hooks\\SchemaUpdates::onLoadExtensionSchemaUpdates"
	},
	"config": {
		"WandaShowPopup": true,
		"WandaLLMProvider": "ollama",
		"WandaLLMApiEndpoint": "http://ollama:11434/api/",
		"WandaLLMApiKey": "",
		"WandaLLMModel": "gemma:2b",
		"WandaLLMElasticsearchUrl": "http://elasticsearch:9200",
		"WandaLLMMaxTokens": 1000,
		"WandaLLMTemperature": 0.7,
		"WandaLLMTimeout": 30,
		"WandaAutoReindex": true
	},
	"manifest_version": 1
}
